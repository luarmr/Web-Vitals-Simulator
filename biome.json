{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noImplicitBoolean": "error",
        "useConst": "error",
        "noUnusedTemplateLiteral": "error",
        "noParameterAssign": "error"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "a11y": {
        "useAltText": "error"
      },
      "complexity": {
        "noForEach": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "include": ["**/*.js", "**/*.css", "**/*.json", "**/*.html"],
    "ignore": ["node_modules", "dist", ".git"],
    "maxSize": 1048576
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
